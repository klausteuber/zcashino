# Database: local SQLite for dev, Turso for production
# Local: DATABASE_URL="file:./prisma/dev.db"
# Turso: DATABASE_URL="libsql://your-db.turso.io"
DATABASE_URL="file:./prisma/dev.db"
TURSO_AUTH_TOKEN=

# Network: testnet or mainnet
ZCASH_NETWORK=testnet

# RPC credentials (must match zcashd config)
ZCASH_RPC_USER=zcashrpc
ZCASH_RPC_PASSWORD=your_rpc_password
ZCASH_RPC_URL=http://127.0.0.1:8232
ZCASH_TESTNET_RPC_URL=http://127.0.0.1:18232

# House wallet z-addresses (must be controlled by zcashd wallet)
HOUSE_ZADDR_MAINNET=
HOUSE_ZADDR_TESTNET=ztestsapling1...

# Demo mode: set to false when connecting a real node
DEMO_MODE=true

# Provably fair shuffle default for NEW games
FAIRNESS_DEFAULT_VERSION=hmac_sha256_v1

# Provably fair mode
# legacy_per_game_v1 = one on-chain commitment per game
# session_nonce_v1    = one on-chain commitment per seed session (rotate-to-reveal)
PROVABLY_FAIR_MODE=legacy_per_game_v1

# Session seed pool config (used when PROVABLY_FAIR_MODE=session_nonce_v1)
SESSION_SEED_POOL_MIN=5
SESSION_SEED_POOL_TARGET=15
SESSION_SEED_POOL_CHECK_INTERVAL_MS=300000
SESSION_SEED_ON_DEMAND_CREATE=true

# Admin dashboard credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_SESSION_SECRET=replace-with-a-long-random-secret

# Player session auth
PLAYER_SESSION_SECRET=replace-with-a-second-long-random-secret
PLAYER_SESSION_AUTH_MODE=compat

# Multi-brand frontend routing
# false = always Cypher branding
# true  = host-based branding (21z + Cypher)
MULTI_BRAND_ENABLED=false
# Optional emergency override: cypher | 21z
FORCE_BRAND=
# Comma-separated host mappings
CYPHER_HOSTS=cypherjester.com,www.cypherjester.com,localhost,127.0.0.1
BRAND_21Z_HOSTS=21z.cash,www.21z.cash

# Admin API rate limits (optional overrides)
ADMIN_RATE_LIMIT_LOGIN_MAX=10
ADMIN_RATE_LIMIT_LOGIN_WINDOW_MS=900000
ADMIN_RATE_LIMIT_READ_MAX=180
ADMIN_RATE_LIMIT_READ_WINDOW_MS=60000
ADMIN_RATE_LIMIT_ACTION_MAX=30
ADMIN_RATE_LIMIT_ACTION_WINDOW_MS=60000

# Sentry error tracking (optional - leave blank to disable)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
